    "version": "2.0.0",
    "tasks": [
        {
            "label": "Delete generated files - UE Project",
            "type": "shell",
            "windows": {
                "command": "rm -r ./Binaries, ./DerivedDataCache, ./Intermediate, ./Saved"
            },
            "problemMatcher": []
        },
        {
            "label": "Delete generated files - UE Plugins",
            "type": "shell",
            "windows": {
                "command": "rm -r ./Plugins/*/Binaries, ./Plugins/*/Intermediate"
            },
            "problemMatcher": []
        },
        {
            "label": "Unlock my Git LFS locks",
            "type": "shell",
            "command": ".vscode/Scripts/UnlockAllMyLocks.ps1",
            "problemMatcher": []
        }
    ]
}